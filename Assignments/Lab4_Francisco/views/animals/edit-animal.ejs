<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    {{> _nav}}

    <main>
        <h1>Edit Animal</h1>
        <form action="/update-animal/{{animal._id}}" method="post">
            <label for="zoo">Zoo:</label>
            <input type="text" id="zoo" name="zoo" value="{{animal.zoo}}" required>
            
            <label for="scientificName">Scientific Name:</label>
            <input type="text" id="scientificName" name="scientificName" value="{{animal.scientificName}}" required>
            
            <label for="commonName">Common Name:</label>
            <input type="text" id="commonName" name="commonName" value="{{animal.commonName}}" required>
            
            <label for="givenName">Given Name:</label>
            <input type="text" id="givenName" name="givenName" value="{{animal.givenName}}" required>
            
            <label for="gender">Gender:</label>
            <select id="gender" name="gender" required>
                <option value="Male" {{#if (eq animal.gender "Male")}}selected{{/if}}>Male</option>
                <option value="Female" {{#if (eq animal.gender "Female")}}selected{{/if}}>Female</option>
            </select>
            
            <label for="dateOfBirth">Date of Birth:</label>
            <input type="date" id="dateOfBirth" name="dateOfBirth" value="{{animal.dateOfBirth}}" required>
            
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="{{animal.age}}" required>
            
            <label for="isTransportable">Is Transportable:</label>
            <input type="checkbox" id="isTransportable" name="isTransportable" {{#if animal.isTransportable}}checked{{/if}} required>
            
            <button type="submit">Update Animal Record</button>
            <button type="button" onclick="deleteAnimal('{{animal._id}}')">Delete Animal</button>
        </form>
    </main>

    <script>
        function deleteAnimal(animalId) {
            if (confirm('Are you sure you want to delete this animal?')) {
                window.location.href = '/delete-animal/' + animalId;
            }
        }
    </script>
</body>
</html>
